    "copyfiles": "^2.1.0",
    "cross-env": "5.2.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "isomorphic-fetch": "2.2.1",
    "next": "8.0.4",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "react": "^16.8.6",
    "react-cookies": "^0.1.1",
    "react-dom": "16.8.6",
    "react-infinite-scroll-component": "^4.5.2",
    "react-router": "^5.0.0",
    "reflect-metadata": "^0.1.13",
