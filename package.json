{
  "name": "zaoasya-task-2018",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:ts": "tsc",
    "build:next": "next build",
    "ci:heroku:build": "docker build --rm=false -t registry.heroku.com/$npm_package_name/web .",
    "ci:heroku:login": "docker login -u $HEROKU_LOGIN -p $HEROKU_TOKEN registry.heroku.com",
    "ci:heroku:push": "docker push registry.heroku.com/$npm_package_name/web:latest",
    "ci:heroku:release": "./scripts/release.sh $npm_package_name",
    "ci:surge": "surge -p ./static/styles -d zaoasya-task-2018.surge.sh",
    "deps:all": "npm ci",
    "deps:production": "npm ci --production",
    "dev": "ts-node-dev --respawn --transpileOnly --ignore-watch dist ./server/index.ts",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint --fix src/**/*.css",
    "lint:ts": "tslint --project .",
    "start": "cross-env NODE_PATH=dist/server node dist/server",
    "surge": "surge -p ./dist/public -d $npm_package_name.surge.sh",
    "prod": "npm run build && node ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/honest-hrundel/ZaoAsya-task-2018.git"
  },
  "author": "Zaostrovskaya Anastasiya",
  "license": "ISC",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
